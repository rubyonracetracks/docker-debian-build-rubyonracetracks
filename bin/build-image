#!/bin/bash

# NOTE: set -o pipefail is needed to ensure that any error or failure causes the whole pipeline to fail.
# Without this specification, the CI status will provide a false sense of security by showing builds
# as succeeding in spite of errors or failures.
set -eo pipefail

source bin/set-variables

DOCKER_IMAGE="ghcr.io/$OWNER/image-$DISTRO-$SUITE-$ABBREV"

echo '##############################################'
echo "BEGIN: Creating the Docker image $DOCKER_IMAGE"
echo '##############################################'

cd "$DIR_BUILD" && docker build -t $DOCKER_IMAGE .

echo '#################################################'
echo "FINISHED: Creating the Docker image $DOCKER_IMAGE"
echo '#################################################'
